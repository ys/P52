<%= form_for(@picture) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :pictureId %><br />
    <%= f.text_field :pictureId %>
  </div>
  <div class="field">
    <%= f.label :postDate %><br />
    <%= f.date_select :postDate %>
  </div>
  <div class="field">
    <%= f.label :project %><br />
	<%= f.collection_select(:project_id, @projects, :id, :title) %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
	<% @pictures.each do |pic| %>
		<label>
			<%= radio_button_tag "picture[flickr]" , pic.id%>
			<%= image_tag FlickRaw.url_s pic %>
			</label>

	<% end %>
	
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= image_tag @user.avatar_url %>

<p>User: <%= @user.name %></p>

<h2>Projects</h2>
<% @user.projects.each do |project| %>

<%= link_to project.title, [@user, project]%>
<%end%>

<h2>Images from all projects</h2>
<% @user.pictures.each do |picture| %>

<%= link_to image_tag(picture.url_s), picture%>
<%end%>



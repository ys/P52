<!DOCTYPE html>
<html>
<head>
  <title>fifty two</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <script>
	$(document).ready(function(){

	    var options = {
	        resizeLgImages:     true,
	        displayNav:         false,
	        handleUnsupported:  'remove',
	        keysClose:          ['c', 27] // c or esc
	    };

	    Shadowbox.init(options);

	});
  </script>
</head>
<body>
	<header class="main">
		<span id="title">fifty two</span>
		<nav class="hmenu">
		  <%= render 'devise/menu/registration_items' %>
		  <%= render 'devise/menu/login_items' %>
		  <%= render 'layouts/menu' %>
		  <%= render 'layouts/menu_auth' %>
		</nav>
		<span class="alerts"><p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p></span>
	</header>
	<div class="container main">
	<%= yield %>
	</div>
</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <title>fifty two</title>
<link href='http://fonts.googleapis.com/css?family=Arvo:regular,bold' rel='stylesheet' type='text/css'>

  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>

  <%= csrf_meta_tag %>
  <%= yield :atom %>
  <script>
	$(document).ready(function(){

	    var options = {
	        resizeLgImages:     true,
	        displayNav:         true,
	        handleUnsupported:  'remove',
	        keysClose:          ['c', 27] // c or esc
	    };

	    Shadowbox.init(options);
		$('#shadowButton').click(function(){
			$('a[rel^="shadowbox"]').toggle();
			$('a[rel^="shadowbox"]').next().toggle();
			if($(this).css('opacity')<1)
				$(this).css('opacity',1);
			else
				$(this).css('opacity',0.2);
			return false;
			
		
		});
		$('.hmenu li:not(:last)').after('<li>â€¢</li>');
	});
  </script>
</head>
<body>
	<header class="main">
		<div id="title"><img src="/images/backlogo.png"/><span><%= link_to '52'.upcase , '/'%></span></div>
		<div id="menubar">
		<nav class="hmenu <% if !user_signed_in? %>small<%end%>">
		  <%= render 'layouts/menu' %>
		  <%= render 'layouts/menu_auth' %>
		<%= render 'devise/menu/login_items' %>
		<%= render 'devise/menu/registration_items' %>
		</nav>
		<a id="shadowButton" href="#">shadow</a>
		</div>
	</header>
	<span class="alerts"><p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p></span>
	<div class="container main">
	<%= yield %>
	</div>
</body>
</html>
